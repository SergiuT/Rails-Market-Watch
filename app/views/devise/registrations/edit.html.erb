<div class="ui large inverted menu custom-nav custom-nav-home">
    <div id="custom-navbar-title" class="item custom-title">
        <i class="user secret icon"></i>
        <%= link_to 'Home', root_path%>
    </div>
    <% if current_user %>
        <%= link_to 'Portfolio', my_portfolio_path, class: 'item' %>
        <%= link_to 'Friends', my_friends_path, class: 'item' %>
    <% end %>
    <div class="right menu">
        <% if current_user %>
            <div class="ui pointing dropdown link item">
                Profile <i class="dropdown icon"></i>
                <div class="menu">
                    <%= link_to 'Edit Profile', edit_user_registration_path, class: 'item' %>
                    <%= link_to 'View Profile', user_path(current_user), class: 'item' %>
                </div>
            </div>
            <div class="item">
                <i class="user icon"></i>
                <%= current_user.full_name %>
            </div>
        <% end %>
        <% if !current_user %>
            <%= link_to 'Login', new_user_session_path, class: 'item' %>
            <div class="item">
                <%= link_to 'Sign Up', new_user_registration_path, class: "ui blue button" %>
            </div>
        <% end %>
    </div>
</div>
<h4 class="ui center aligned medium icon header">
  <i class="circular inverted blue power off tiny icon"></i>
  Edit Profile 
</h4>
<div class="ui middle aligned center aligned grid">
  <div class="column">
    <div class="ui center aligned grid">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <div class="ui left icon input">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            <i class="user icon"></i>
          </div>
        </div>

        <div class="custom-one-field">
          <div class="field">
            <%= f.label :first_name %><br />
            <div class="ui input">
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first name" %>
            </div>
          </div>
          <div class="field">
            <%= f.label :last_name %><br />
            <div class="ui input">
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last name" %>
            </div>
          </div>
        </div>
        
        <div class="field">
          <%= f.label :password %>
          <div class="ui input">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
          <p class="edit-message">(leave blank if you don't want to change it)</p>
        </div>

        <div class="field custom-stupid">
          <%= f.label :password_confirmation %>
          <div class="ui input">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :current_password %>
          <div class="ui input">
            <%= f.password_field :current_password, autocomplete: "current-password" %>
          </div>
        </div>

        <div class="actions sign-up">
          <%= f.submit "Update", class: "ui blue submit button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>